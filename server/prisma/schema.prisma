generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Entry {
  id         Int       @id @default(autoincrement())
  title      String
  type       EntryType
  director   String?
  budget     Float? // store budget in millions or in raw number
  location   String?
  duration   String? // allow formats like "148 min" or "49 min/ep"
  yearOrTime String? // freeform, e.g. "2010" or "2008â€“2013"
  posterUrl  String? // optional image URL
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  userId     Int?
  user       User?     @relation(fields: [userId], references: [id])
}

enum EntryType {
  MOVIE
  TV_SHOW
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String  @default("User")
  password String
  otp      String?
  verified Boolean @default(false)
  entries  Entry[]
}
